{
  "manifest_version": 3,
  "name": "Sample",
  "version": "0.0.0",
  "description": "initial test",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/bootstrap.bundle.min.js",
        "js/jquery-3.6.1.min.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "action": {
    "default_icon": "icons/sample00.png",
    "default_popup": "contents/popup.html"
  },
  "background": {
    "service_worker": "js/bg.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://jinkai-nitamago-cert.netlify.app/.netlify/functions/getcertinfo?q=*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
